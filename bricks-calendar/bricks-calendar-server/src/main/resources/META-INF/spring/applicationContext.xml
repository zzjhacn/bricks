<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<bean class="com.bricks.kvs.client.BricksPropertyPlaceholderConfigurer" p:kvClient-ref="kvClient">
		<property name="location" value="classpath:META-INF/spring/test.properties" />
	</bean>

	<dubbo:application logger="log4j" name="${appName}" />
	<dubbo:registry address="${dubbo.registry.address}" />
	<dubbo:protocol name="dubbo" port="${dubbo.port}" />

	<bean id="kvClient" class="com.bricks.kvs.client.KVClientImpl" p:scope="${appName}" />

	<bean class="com.bricks.core.schedule.SimpleScheduler" />
	<bean class="com.bricks.core.SpringCtxHolder" />

	<bean id="calendarService" class="com.bricks.calendar.server.CalendarServerImpl" />

	<dubbo:service interface="com.bricks.calendar.server.CalendarServer" ref="calendarService" />
	<dubbo:service interface="com.bricks.core.simpleservice.DubboBasedServiceServer" ref="calendarService" />

</beans>
