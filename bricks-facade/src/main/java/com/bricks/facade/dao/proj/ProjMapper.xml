<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bricks.facade.dao.proj.ProjDao">
	<resultMap type="com.bricks.facade.dao.proj.Proj" id="result"/>
    <sql id="select_all_cols">
    	t_proj.ID,
		t_proj.proj_code as projCode,
		t_proj.proj_name as projName,
		t_proj.CREATE_TIME as createTime,
		t_proj.UPDATE_TIME as updateTime,
		t_proj.VERSION
    </sql>
    <sql id="insert_all_cols">
		t_proj.proj_code,
		t_proj.proj_name,
		t_proj.CREATE_TIME,
		t_proj.UPDATE_TIME,
		t_proj.VERSION
    </sql>
    <sql id="where_all">
		WHERE 1=1
		<if test="cond.id != null">
			AND t_proj.id = #{cond.id}
		</if>
		<if test="cond.projCode != null">
			AND t_proj.proj_code = #{cond.projCode}
		</if>
		<if test="cond.projName != null">
			AND t_proj.proj_name = #{cond.projName}
		</if>
		<if test="cond.version != null">
			AND t_proj.version = #{cond.version}
		</if>
		<if test="cond.ids != null">
			and t_proj.id in
			<foreach item="item" index="index" collection="cond.ids" open="(" separator="," close=")">
				#{item}
 			</foreach>
		</if>
		<if test="cond.createTimeB != null">
		<![CDATA[
			AND t_proj.create_time >= #{cond.createTimeB}
		]]>
		</if>
		<if test="cond.createTimeE != null">
		<![CDATA[
			AND t_proj.create_time <= #{cond.createTimeE}
		]]>
		</if>
		<if test="cond.updateTimeB != null">
		<![CDATA[
			AND t_proj.update_time >= #{cond.updateTimeB}
		]]>
		</if>
		<if test="cond.updateTimeE != null">
		<![CDATA[
			AND t_proj.update_time <= #{cond.updateTimeE}
		]]>
		</if>
    </sql>
	<select id="select" resultMap="result">
		select <include refid="select_all_cols"/>
		FROM t_proj
		WHERE t_proj.ID=#{id}
		<if test="lock">
		FOR UPDATE
		</if>
	</select>
	<select id="query" resultMap="result">
		select <include refid="select_all_cols"/>
		FROM t_proj
		<include refid="where_all"/>
		<if test="start != null">
		order by t_proj.create_time desc
		limit #{start},#{size}
		</if>
	</select>
	<select id="count" resultType="java.lang.Long">
		select count(0)
		FROM t_proj
		<include refid="where_all"/>
	</select>
	<select id="sum" resultType="java.math.BigDecimal">
		select sum(${col})
		FROM t_proj
		<include refid="where_all"/>
	</select>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO t_proj(<include refid="insert_all_cols"/>)
			VALUES
				(
					#{projCode},
					#{projName},
					current_timestamp(),current_timestamp(),1
				)
	</insert>
	<insert id="batchInsert">
		INSERT INTO t_proj(<include refid="insert_all_cols"/>)
			VALUES
			<foreach item="item" index="index" collection="list" open="" separator="," close="">
				(
					#{item.projCode},
					#{item.projName},
					current_timestamp(),current_timestamp(),1
				)
			</foreach>
	</insert>
	<insert id="insertWithId">
		INSERT INTO t_proj(ID,<include refid="insert_all_cols"/>)
			VALUES
				(#{id},
					#{projCode},
					#{projName},
					current_timestamp(),current_timestamp(),1
				)
	</insert>
	<insert id="batchInsertWithId">
		INSERT INTO t_proj(ID,<include refid="insert_all_cols"/>)
			VALUES
			<foreach item="item" index="index" collection="list" open="" separator="," close="">
				(#{item.id},
					#{item.projCode},
					#{item.projName},
					current_timestamp(),current_timestamp(),1
				)
			</foreach>
	</insert>
	<update id="update">
		update t_proj
		<set>
			proj_code = #{projCode},
			proj_name = #{projName},
			id = #{id},
			version = version + 1,
			update_time = current_timestamp()
		</set>
		where t_proj.id = #{id} and t_proj.version = #{version}
	</update>
	<delete id="delete">
		delete from t_proj
		<include refid="where_all"/>
	</delete>
	<delete id="deleteById">
		delete from t_proj where t_proj.id = #{id}
	</delete>
</mapper>
